{
    "name": "hiphople-news",
    "version": "1.0.4",
    "main": "./dist",
    "types": "./dist/types",
    "license": "MIT",
    "scripts": {
        "build": "rm -rf ./dist && npx rollup -c && npx tsc --declaration --outDir ./dist/types --emitDeclarationOnly",
        "prepare": "yarn build",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "release": "release-it"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "yarn lint"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}",
            "requireUpstream": false
        },
        "npm": {
            "publish": true,
            "skipChecks": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "dependencies": {
        "cheerio": "^1.0.0-rc.3",
        "request": "^2.88.2",
        "typescript": "^4.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-typescript": "^7.10.4",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@react-native-community/eslint-config": "^2.0.0",
        "@release-it/conventional-changelog": "^2.0.0",
        "@rollup/plugin-babel": "^5.2.1",
        "@rollup/plugin-typescript": "^6.0.0",
        "@types/cheerio": "^0.22.22",
        "@types/request": "^2.48.5",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "eslint": "^7.10.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "prettier": "^2.1.2",
        "release-it": "^14.0.3",
        "tslib": "^2.0.1"
    },
    "engines": {
        "node": "12"
    },
    "description": "hiphople news crawler",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/killi8n/hiphople-news.git"
    },
    "keywords": [
        "crawl",
        "news",
        "hiphople"
    ],
    "author": "killi8n",
    "bugs": {
        "url": "https://github.com/killi8n/hiphople-news/issues"
    },
    "homepage": "https://github.com/killi8n/hiphople-news#readme"
}
